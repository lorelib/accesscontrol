<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lorelib.hawk.accesscontrol.domain.UserRepository">
    <insert id="addRoleTo">
        <foreach collection="roles" item="role">
            INSERT INTO ac_user (
            id,
            loginId,
            roleId,
            createBy,
            createDate
            ) VALUES (
            #{id},
            #{loginId},
            #{role.id},
            #{createBy},
            #{createDate}
            );
        </foreach>
    </insert>

    <select id="getRolesFor" resultMap="roleMap">
        SELECT
        roleId
        FROM ac_user u
        LEFT JOIN ac_role r ON u.roleId = r.id
        WHERE u.loginId = #{loginId}
    </select>

    <resultMap id="userMap" type="User" autoMapping="true">
        <result property="id" column="id" />
        <association property="roles" resultMap="roleMap" columnPrefix=""/>
    </resultMap>

    <resultMap id="roleMap" type="Role">
        <result property="id" column="roleId" />
    </resultMap>
</mapper>